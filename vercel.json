{
  "version": 2,
  "builds": [
    {
      "src": "app_vercel.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app_vercel.py"
    }
  ],
  "functions": {
    "app_vercel.py": {
      "maxDuration": 10
    }
  },
  "outputDirectory": "dist",
  "excludeFiles": [
    "models/**",
    "*.pkl",
    "*.joblib",
    "notebooks/**",
    "docs/**",
    "__pycache__/**",
    ".git/**",
    ".venv/**",
    "*.md",
    "Makefile",
    "test_*",
    "*.egg-info/**"
  ]
}
